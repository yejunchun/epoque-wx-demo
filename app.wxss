@import './resources/icon.wxss';

.container{
  width: 100%;
  height: 100%;
  position: absolute;
}
.row{
  display: flex;
  flex-direction: row;
}
.column{
  display: flex;
  flex-direction: column;
}
.center-row{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.center-column{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.item-group{
  width: 100%;
}
.text{
  color: #999;
  font-size: 14px;
}

.label{
  position: relative;
  width: 100%;
  margin-bottom: 10px;
  margin-top: 5px;
}
.label input{
  width: 100%;
  height: 40px;
}

.btn{
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.border-buttom{
  border-bottom: 1px solid #999;
}
.border-buttom:hover{
  border-bottom: 1px solid blue;
}


.size20{
  font-size: 20px;
}
.size18{
  color: #fff;
  font-weight: bold;
  font-size: 18px;
}

.size16{
  font-size: 16px;
}

.size14{
  color: #fff;
  font-size: 14px;
}
.size12{
  color: #fff;
  font-size: 12px;
}
.size28{
  color: #4789ed;
  font-size: 28px;
}
.size32{
  color: #4789ed;
  font-size: 32px;
}

.size20{
  color: #4789ed;
  font-size: 20px;
}